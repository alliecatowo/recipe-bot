{
    // "explorer.excludeGitIgnore": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.venv": true,
        "**/.pdm-python": true,
        "**/.mypy_cache": true,
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
}